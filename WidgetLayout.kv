<BoxLayoutExample>:
    orientation: "vertical"
    spacing: "2dp"
    Button:
        text: "Red Mars"
        background_color: 255,0,0,1
        size_hint: .5,2
        # horizontal positions: "x" (left), "center_x", "right"
        # vertical positions: "y"(bottom), "center_y","top"
        pos_hint: {"x":.25}
    Button:
        text: "Green Mars"
        background_color: 0,255,1,1
        size_hint: 1,1
    BoxLayout:
        Button:
            text: "Guhuh?"
        Button:
            text: "Stoopid"
    Button:
        text: "Blue Mars"
        background_color: 0,0,255,1
        size_hint: 1,1
        # horizontal positions: "x"(left), "center_x", "right"
        # vertical positions: "y"(bottom), "center_y", "top"
        pos_hint: {"center_x":.5}
    Button:
        text: "Button D"


